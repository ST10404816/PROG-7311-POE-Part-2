@model List<PROG_7311_POE_Part_2.Models.Product>

<h2>My Products</h2>

<a asp-action="CreateProduct" class="btn btn-success mb-3">Add New Product</a>

<!-- Table to display a list of products -->
<table class="table table-bordered">
    <thead>
        <tr>
            <th>Name</th>
            <th>Category</th>
            <th>Production Date</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Category</td>
                <td>@item.ProductionDate.ToShortDateString()</td>
            </tr>
        }
    </tbody>
</table>
