@model PROG_7311_POE_Part_2.Models.Farmer

<h2>Add Farmer Profile</h2>

<form asp-action="CreateFarmer" method="post">

    <!-- Input field for the farmer's Name -->
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
    </div>

    <!-- Input field for the farmer's Region -->
    <div class="form-group">
        <label asp-for="Region"></label>
        <input asp-for="Region" class="form-control" />
    </div>

    <!-- Submit button to save the form data -->
    <button type="submit" class="btn btn-success">Save</button>

</form>
